{
  "manifest_version": 3,
  "name": "Prism",
  "version": "1.0.0",
  "description": "Detect misinformation in Instagram posts.",

  "permissions": [
    "activeTab",
    "storage"
  ],

  "host_permissions": [
    "https://www.instagram.com/*"
  ],

  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
